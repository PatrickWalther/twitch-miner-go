<?xml version="1.0"?>
<Container version="2">
  <Name>twitch-miner-go</Name>
  <Repository>thegame402/twitch-miner-go</Repository>
  <Registry>https://hub.docker.com/r/thegame402/twitch-miner-go/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/PatrickWalther/twitch-miner-go/issues</Support>
  <Project>https://github.com/PatrickWalther/twitch-miner-go</Project>
  <Overview>Twitch Channel Points Miner - Automatically earn Twitch channel points by simulating viewer presence. Features: Passive point farming, automatic bonus claiming, watch streak detection, raid following, prediction betting, game drops tracking, moments claiming, and real-time analytics dashboard.</Overview>
  <Category>Tools:</Category>
  <WebUI>http://[IP]:[PORT:5000]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/PatrickWalther/twitch-miner-go/main/unraid/twitch-miner-go.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/PatrickWalther/twitch-miner-go/main/unraid/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Description>Twitch Channel Points Miner - Automatically earn Twitch channel points by simulating viewer presence. Features: Passive point farming, automatic bonus claiming, watch streak detection, raid following, prediction betting, game drops tracking, moments claiming, and real-time analytics dashboard.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>5000</HostPort>
        <ContainerPort>5000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/twitch-miner-go/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/twitch-miner-go/cookies</HostDir>
      <ContainerDir>/cookies</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/twitch-miner-go/logs</HostDir>
      <ContainerDir>/logs</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/twitch-miner-go/analytics</HostDir>
      <ContainerDir>/analytics</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>America/New_York</Value>
      <Name>TZ</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Analytics Port" Target="5000" Default="5000" Mode="tcp" Description="Port for the analytics web dashboard. Only needed if enableAnalytics is true in config." Type="Port" Display="always" Required="false" Mask="false">5000</Config>
  <Config Name="Config" Target="/config" Default="/mnt/user/appdata/twitch-miner-go/config" Mode="rw" Description="Path to configuration directory. Place your config.json here." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/twitch-miner-go/config</Config>
  <Config Name="Cookies" Target="/cookies" Default="/mnt/user/appdata/twitch-miner-go/cookies" Mode="rw" Description="Path to store authentication cookies/tokens. Persists login between restarts." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/twitch-miner-go/cookies</Config>
  <Config Name="Logs" Target="/logs" Default="/mnt/user/appdata/twitch-miner-go/logs" Mode="rw" Description="Path to store log files." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/twitch-miner-go/logs</Config>
  <Config Name="Analytics Data" Target="/analytics" Default="/mnt/user/appdata/twitch-miner-go/analytics" Mode="rw" Description="Path to store analytics data." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/twitch-miner-go/analytics</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Timezone for log timestamps." Type="Variable" Display="advanced" Required="false" Mask="false">America/New_York</Config>
</Container>
